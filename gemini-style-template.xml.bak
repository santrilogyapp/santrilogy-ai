<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:defaultwidgetversion='2' b:layoutsVersion='3' b:responsive='true' b:templateUrl='indie.xml' b:templateVersion='1.0.0' expr:dir='data:blog.languageDirection' xmlns='http://www.w3.org/1999/xhtml' xmlns:b='http://www.google.com/2005/gml/b' xmlns:data='http://www.google.com/2005/gml/data' xmlns:expr='http://www.google.com/2005/gml/expr'>
  <head>
    <meta content='width=device-width, initial-scale=1' name='viewport'/>
    <title><data:blog.pageTitle/></title>
    
    <link href='https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap' rel='stylesheet'/>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css' rel='stylesheet'/>

    <b:skin><![CDATA[
      /* ============================================
         SANTRILOGY AI - FUTURISTIC DESIGN
         ============================================ */
      
      :root {
        --bg-primary: #fafbfc;
        --bg-secondary: #ffffff;
        --bg-tertiary: #f0f2f5;
        --bg-glass: rgba(255,255,255,0.8);
        --text-primary: #0f172a;
        --text-secondary: #475569;
        --text-muted: #94a3b8;
        --accent: #6366f1;
        --accent-2: #8b5cf6;
        --accent-3: #06b6d4;
        --accent-glow: rgba(99,102,241,0.2);
        --gradient-1: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #06b6d4 100%);
        --gradient-2: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        --border: rgba(0,0,0,0.06);
        --border-light: rgba(0,0,0,0.03);
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.04);
        --shadow-md: 0 4px 20px rgba(0,0,0,0.06);
        --shadow-lg: 0 12px 40px rgba(0,0,0,0.08);
        --shadow-glow: 0 0 40px rgba(99,102,241,0.15);
        --radius-sm: 12px;
        --radius-md: 16px;
        --radius-lg: 24px;
        --radius-xl: 32px;
      }

      [data-theme="dark"] {
        --bg-primary: #0a0a0f;
        --bg-secondary: #12121a;
        --bg-tertiary: #1a1a25;
        --bg-glass: rgba(18,18,26,0.9);
        --text-primary: #f8fafc;
        --text-secondary: #a1a1aa;
        --text-muted: #52525b;
        --border: rgba(255,255,255,0.06);
        --border-light: rgba(255,255,255,0.03);
        --shadow-glow: 0 0 60px rgba(99,102,241,0.2);
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Space Grotesk', -apple-system, sans-serif;
        background: var(--bg-primary);
        color: var(--text-primary);
        min-height: 100vh;
        overflow-x: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Background Gradient Orbs */
      body::before {
        content: '';
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: 
          radial-gradient(circle at 20% 20%, rgba(99,102,241,0.08) 0%, transparent 50%),
          radial-gradient(circle at 80% 80%, rgba(139,92,246,0.08) 0%, transparent 50%),
          radial-gradient(circle at 40% 80%, rgba(6,182,212,0.05) 0%, transparent 40%);
        pointer-events: none;
        z-index: -1;
      }

      a { text-decoration: none; color: inherit; }
      .navbar, .attribution, #blog-pager, .post-footer, .post-header { display: none !important; }

      /* ============================================
         ANIMATED ATOM LOGO
         ============================================ */
      
      .atom-logo {
        width: 44px;
        height: 44px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .atom-nucleus {
        width: 10px;
        height: 10px;
        background: var(--gradient-1);
        border-radius: 50%;
        position: absolute;
        box-shadow: 0 0 20px rgba(99,102,241,0.6), 0 0 40px rgba(139,92,246,0.4);
        animation: nucleusPulse 2s ease-in-out infinite;
      }

      @keyframes nucleusPulse {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.2); opacity: 0.8; }
      }

      .atom-orbit {
        position: absolute;
        border: 1.5px solid transparent;
        border-radius: 50%;
        animation: orbitSpin 3s linear infinite;
      }

      .atom-orbit::before {
        content: '';
        position: absolute;
        width: 6px;
        height: 6px;
        background: var(--accent);
        border-radius: 50%;
        top: -3px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 0 10px var(--accent);
      }

      .atom-orbit-1 {
        width: 32px;
        height: 32px;
        border-color: rgba(99,102,241,0.4);
        animation-duration: 2s;
      }

      .atom-orbit-2 {
        width: 36px;
        height: 20px;
        border-color: rgba(139,92,246,0.4);
        animation-duration: 2.5s;
        animation-direction: reverse;
        transform: rotate(60deg);
      }

      .atom-orbit-3 {
        width: 36px;
        height: 20px;
        border-color: rgba(6,182,212,0.4);
        animation-duration: 3s;
        transform: rotate(-60deg);
      }

      .atom-orbit-2::before { background: var(--accent-2); box-shadow: 0 0 10px var(--accent-2); }
      .atom-orbit-3::before { background: var(--accent-3); box-shadow: 0 0 10px var(--accent-3); }

      @keyframes orbitSpin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
      }

      .atom-orbit-2 { animation-name: orbitSpin2; }
      @keyframes orbitSpin2 {
        from { transform: rotate(60deg); }
        to { transform: rotate(420deg); }
      }

      .atom-orbit-3 { animation-name: orbitSpin3; }
      @keyframes orbitSpin3 {
        from { transform: rotate(-60deg); }
        to { transform: rotate(300deg); }
      }

      /* Large Atom for Welcome */
      .atom-logo-lg {
        width: 120px;
        height: 120px;
      }

      .atom-logo-lg .atom-nucleus {
        width: 24px;
        height: 24px;
      }

      .atom-logo-lg .atom-orbit-1 {
        width: 80px;
        height: 80px;
      }

      .atom-logo-lg .atom-orbit-2,
      .atom-logo-lg .atom-orbit-3 {
        width: 100px;
        height: 50px;
      }

      .atom-logo-lg .atom-orbit::before {
        width: 12px;
        height: 12px;
        top: -6px;
      }

      /* ============================================
         LAYOUT
         ============================================ */
      
      .app-container {
        display: flex;
        height: 100vh;
        max-width: 1600px;
        margin: 0 auto;
      }

      /* ============================================
         SIDEBAR - Glassmorphism
         ============================================ */
      
      .sidebar {
        width: 280px;
        background: var(--bg-glass);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-right: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 100;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid var(--border);
      }

      .logo-wrapper {
        display: flex;
        align-items: center;
        gap: 14px;
      }

      .logo-text {
        font-size: 20px;
        font-weight: 700;
        background: var(--gradient-1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.5px;
      }

      .new-chat-btn {
        margin: 20px;
        padding: 14px 20px;
        background: var(--gradient-1);
        border: none;
        border-radius: var(--radius-md);
        color: white;
        font-family: inherit;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(99,102,241,0.3);
      }

      .new-chat-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(99,102,241,0.4);
      }

      .sidebar-nav {
        flex: 1;
        padding: 0 12px;
        overflow-y: auto;
      }

      .nav-section {
        margin-bottom: 20px;
      }

      .nav-label {
        font-size: 10px;
        font-weight: 600;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px 16px 8px;
      }

      .nav-item {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 12px 16px;
        border-radius: var(--radius-sm);
        color: var(--text-secondary);
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
      }

      .nav-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: var(--gradient-1);
        opacity: 0;
        transition: opacity 0.2s ease;
      }

      .nav-item:hover {
        color: var(--text-primary);
      }

      .nav-item:hover::before {
        opacity: 0.08;
      }

      .nav-item.active {
        color: var(--accent);
        background: var(--accent-glow);
      }

      .nav-item i, .nav-item span {
        position: relative;
        z-index: 1;
      }

      .nav-item i {
        width: 20px;
        font-size: 16px;
      }

      .sidebar-footer {
        padding: 20px;
        border-top: 1px solid var(--border);
      }

      .theme-switch {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 16px;
        background: var(--bg-tertiary);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .theme-switch:hover {
        background: var(--border);
      }

      .theme-switch-label {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 13px;
        font-weight: 500;
        color: var(--text-secondary);
      }

      .toggle {
        width: 44px;
        height: 24px;
        background: var(--text-muted);
        border-radius: 12px;
        position: relative;
        transition: background 0.3s ease;
      }

      .toggle::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        top: 2px;
        left: 2px;
        transition: transform 0.3s ease;
        box-shadow: var(--shadow-sm);
      }

      [data-theme="dark"] .toggle {
        background: var(--gradient-1);
      }

      [data-theme="dark"] .toggle::after {
        transform: translateX(20px);
      }

      /* ============================================
         MAIN CONTENT
         ============================================ */
      
      .main-content {
        flex: 1;
        margin-left: 280px;
        display: flex;
        flex-direction: column;
        height: 100vh;
        position: relative;
      }

      /* Header */
      .header {
        padding: 16px 24px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--bg-glass);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid var(--border);
        position: sticky;
        top: 0;
        z-index: 50;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: 16px;
      }

      .menu-btn {
        display: none;
        width: 40px;
        height: 40px;
        align-items: center;
        justify-content: center;
        border: none;
        background: var(--bg-tertiary);
        border-radius: var(--radius-sm);
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .menu-btn:hover {
        background: var(--border);
        color: var(--text-primary);
      }

      .model-selector {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 14px;
        background: var(--bg-tertiary);
        border-radius: var(--radius-sm);
        font-size: 13px;
        font-weight: 500;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .model-selector:hover {
        background: var(--border);
      }

      .model-dot {
        width: 8px;
        height: 8px;
        background: #22c55e;
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .header-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        background: transparent;
        border-radius: var(--radius-sm);
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 18px;
      }

      .header-btn:hover {
        background: var(--bg-tertiary);
        color: var(--text-primary);
      }

      /* ============================================
         CHAT AREA
         ============================================ */
      
      #main-chat-area {
        flex: 1;
        overflow-y: auto;
        padding: 40px 24px 160px;
        scroll-behavior: smooth;
      }

      .chat-container {
        max-width: 800px;
        margin: 0 auto;
      }

      /* Messages */
      .post-outer {
        margin-bottom: 40px;
        opacity: 0;
        animation: messageIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      }

      @keyframes messageIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .message {
        display: flex;
        gap: 16px;
      }

      .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: var(--radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        position: relative;
      }

      .ai-avatar {
        background: var(--gradient-1);
        box-shadow: 0 4px 15px rgba(99,102,241,0.3);
      }

      /* Mini Atom in Avatar */
      .mini-atom {
        width: 100%;
        height: 100%;
        position: relative;
      }

      .mini-atom .mini-nucleus {
        width: 6px;
        height: 6px;
        background: white;
        border-radius: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }

      .mini-atom .mini-orbit {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 24px;
        height: 24px;
        border: 1px solid rgba(255,255,255,0.4);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        animation: miniSpin 2s linear infinite;
      }

      .mini-atom .mini-orbit::before {
        content: '';
        position: absolute;
        width: 4px;
        height: 4px;
        background: white;
        border-radius: 50%;
        top: -2px;
        left: 50%;
        transform: translateX(-50%);
      }

      @keyframes miniSpin {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
      }

      .user-avatar {
        background: var(--bg-tertiary);
        color: var(--text-secondary);
        font-weight: 600;
        font-size: 14px;
      }

      .message-content {
        flex: 1;
        min-width: 0;
      }

      .message-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 10px;
      }

      .message-author {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary);
      }

      .message-time {
        font-size: 12px;
        color: var(--text-muted);
      }

      .post-body {
        font-size: 15px;
        line-height: 1.8;
        color: var(--text-primary);
      }

      .post-body p { margin-bottom: 16px; }
      .post-body p:last-child { margin-bottom: 0; }

      .post-body h2, .post-body h3 {
        font-size: 17px;
        font-weight: 600;
        margin: 24px 0 12px;
        color: var(--text-primary);
      }

      .post-body blockquote {
        border-left: 3px solid var(--accent);
        background: var(--accent-glow);
        margin: 16px 0;
        padding: 16px 20px;
        border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
        font-style: italic;
        color: var(--text-secondary);
      }

      .post-body code {
        background: var(--bg-tertiary);
        padding: 3px 8px;
        border-radius: 6px;
        font-size: 13px;
        font-family: 'JetBrains Mono', monospace;
      }

      .post-body pre {
        background: var(--bg-secondary);
        border: 1px solid var(--border);
        padding: 20px;
        border-radius: var(--radius-sm);
        overflow-x: auto;
        margin: 16px 0;
      }

      /* Message Actions */
      .message-actions {
        display: flex;
        gap: 6px;
        margin-top: 16px;
        opacity: 0;
        transform: translateY(5px);
        transition: all 0.2s ease;
      }

      .post-outer:hover .message-actions {
        opacity: 1;
        transform: translateY(0);
      }

      .msg-action {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 13px;
      }

      .msg-action:hover {
        background: var(--bg-tertiary);
        color: var(--accent);
      }

      /* ============================================
         WELCOME SCREEN
         ============================================ */
      
      .welcome-screen {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 65vh;
        text-align: center;
        padding: 40px 20px;
      }

      .welcome-logo {
        margin-bottom: 32px;
        position: relative;
      }

      .welcome-glow {
        position: absolute;
        width: 200px;
        height: 200px;
        background: var(--gradient-1);
        filter: blur(80px);
        opacity: 0.3;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation: glowPulse 4s ease-in-out infinite;
      }

      @keyframes glowPulse {
        0%, 100% { opacity: 0.2; transform: translate(-50%, -50%) scale(1); }
        50% { opacity: 0.4; transform: translate(-50%, -50%) scale(1.1); }
      }

      .welcome-title {
        font-size: 42px;
        font-weight: 700;
        background: var(--gradient-1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 12px;
        letter-spacing: -1px;
      }

      .welcome-subtitle {
        font-size: 18px;
        color: var(--text-secondary);
        max-width: 450px;
        line-height: 1.7;
        margin-bottom: 48px;
      }

      .suggestions {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        max-width: 600px;
        width: 100%;
      }

      .suggestion-card {
        padding: 20px;
        background: var(--bg-secondary);
        border: 1px solid var(--border);
        border-radius: var(--radius-md);
        text-align: left;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .suggestion-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--gradient-1);
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .suggestion-card:hover {
        border-color: var(--accent);
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg), var(--shadow-glow);
      }

      .suggestion-card:hover::before {
        opacity: 1;
      }

      .suggestion-icon {
        width: 36px;
        height: 36px;
        background: var(--accent-glow);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--accent);
        font-size: 16px;
        margin-bottom: 12px;
      }

      .suggestion-title {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 6px;
      }

      .suggestion-desc {
        font-size: 13px;
        color: var(--text-muted);
        line-height: 1.5;
      }

      /* ============================================
         INPUT BAR - Premium Style
         ============================================ */
      
      .input-wrapper {
        position: fixed;
        bottom: 0;
        left: 280px;
        right: 0;
        padding: 24px;
        background: linear-gradient(to top, var(--bg-primary) 60%, transparent);
        z-index: 50;
      }

      .input-container {
        max-width: 800px;
        margin: 0 auto;
      }

      .input-box {
        display: flex;
        align-items: flex-end;
        gap: 12px;
        background: var(--bg-secondary);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 14px 18px;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-md);
      }

      .input-box:focus-within {
        border-color: var(--accent);
        box-shadow: var(--shadow-lg), 0 0 0 4px var(--accent-glow);
      }

      .input-field {
        flex: 1;
        border: none;
        background: transparent;
        font-family: inherit;
        font-size: 15px;
        line-height: 1.6;
        color: var(--text-primary);
        resize: none;
        outline: none;
        min-height: 28px;
        max-height: 140px;
      }

      .input-field::placeholder {
        color: var(--text-muted);
      }

      .input-actions {
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .input-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-sm);
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
        background: transparent;
        font-size: 18px;
      }

      .input-btn:hover {
        background: var(--bg-tertiary);
        color: var(--text-secondary);
      }

      .send-btn {
        background: var(--gradient-1);
        color: white;
        box-shadow: 0 4px 12px rgba(99,102,241,0.3);
      }

      .send-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(99,102,241,0.4);
        color: white;
        background: var(--gradient-1);
      }

      .input-footer {
        text-align: center;
        margin-top: 14px;
        font-size: 12px;
        color: var(--text-muted);
      }

      /* Typing Indicator */
      .typing {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 0;
      }

      .typing-dot {
        width: 8px;
        height: 8px;
        background: var(--accent);
        border-radius: 50%;
        animation: typingBounce 1.4s ease-in-out infinite;
      }

      .typing-dot:nth-child(2) { animation-delay: 0.2s; }
      .typing-dot:nth-child(3) { animation-delay: 0.4s; }

      @keyframes typingBounce {
        0%, 60%, 100% { transform: translateY(0); }
        30% { transform: translateY(-8px); }
      }

      /* ============================================
         OVERLAY & RESPONSIVE
         ============================================ */
      
      .overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        backdrop-filter: blur(4px);
        z-index: 99;
      }

      @media (max-width: 1024px) {
        .sidebar {
          transform: translateX(-100%);
        }
        .sidebar.open {
          transform: translateX(0);
        }
        .overlay.active {
          display: block;
        }
        .main-content {
          margin-left: 0;
        }
        .input-wrapper {
          left: 0;
        }
        .menu-btn {
          display: flex;
        }
      }

      @media (max-width: 640px) {
        .header { padding: 12px 16px; }
        #main-chat-area { padding: 24px 16px 160px; }
        .input-wrapper { padding: 16px; }
        .welcome-title { font-size: 32px; }
        .suggestions {
          grid-template-columns: 1fr;
        }
        .atom-logo-lg {
          width: 80px;
          height: 80px;
        }
        .atom-logo-lg .atom-nucleus { width: 16px; height: 16px; }
        .atom-logo-lg .atom-orbit-1 { width: 50px; height: 50px; }
        .atom-logo-lg .atom-orbit-2,
        .atom-logo-lg .atom-orbit-3 { width: 65px; height: 35px; }
      }

      /* Scrollbar */
      ::-webkit-scrollbar { width: 6px; }
      ::-webkit-scrollbar-track { background: transparent; }
      ::-webkit-scrollbar-thumb {
        background: var(--border);
        border-radius: 3px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: var(--text-muted);
      }

    ]]></b:skin>
  </head>
  
  <body>
    <div class='app-container'>

      <div class='overlay' id='overlay' onclick='toggleSidebar()'/>

      <!-- SIDEBAR -->
      <aside class='sidebar' id='sidebar'>
        <div class='sidebar-header'>
          <div class='logo-wrapper'>
            <!-- Animated Atom Logo -->
            <div class='atom-logo'>
              <div class='atom-nucleus'/>
              <div class='atom-orbit atom-orbit-1'/>
              <div class='atom-orbit atom-orbit-2'/>
              <div class='atom-orbit atom-orbit-3'/>
            </div>
            <span class='logo-text'>Santrilogy AI</span>
          </div>
        </div>

        <button class='new-chat-btn' onclick='startNewChat()'>
          <i class='fas fa-plus'/>
          New Chat
        </button>

        <nav class='sidebar-nav'>
          <div class='nav-section'>
            <div class='nav-label'>Discover</div>
            <div class='nav-item' onclick='navigateTo("explore")'>
              <i class='fas fa-compass'/>
              <span>Explore</span>
            </div>
            <div class='nav-item' onclick='navigateTo("library")'>
              <i class='fas fa-book-open'/>
              <span>Kitab Library</span>
            </div>
          </div>

          <div class='nav-section'>
            <div class='nav-label'>History</div>
            <div class='nav-item active'>
              <i class='fas fa-clock-rotate-left'/>
              <span>Recent Chats</span>
            </div>
            <div class='nav-item'>
              <i class='fas fa-bookmark'/>
              <span>Saved</span>
            </div>
          </div>

          <div class='nav-section'>
            <div class='nav-label'>Account</div>
            <div class='nav-item' onclick='navigateTo("settings")'>
              <i class='fas fa-sliders'/>
              <span>Settings</span>
            </div>
            <div class='nav-item' onclick='navigateTo("upgrade")'>
              <i class='fas fa-gem'/>
              <span>Upgrade Pro</span>
            </div>
          </div>
        </nav>

        <div class='sidebar-footer'>
          <div class='theme-switch' onclick='toggleTheme()'>
            <div class='theme-switch-label'>
              <i class='fas fa-moon'/>
              <span>Dark Mode</span>
            </div>
            <div class='toggle'/>
          </div>
        </div>
      </aside>

      <!-- MAIN -->
      <main class='main-content'>
        
        <header class='header'>
          <div class='header-left'>
            <button class='menu-btn' onclick='toggleSidebar()'>
              <i class='fas fa-bars'/>
            </button>
            <div class='model-selector'>
              <div class='model-dot'/>
              <span>Santrilogy Pro</span>
              <i class='fas fa-chevron-down' style='font-size: 10px; margin-left: 4px;'/>
            </div>
          </div>
          <div class='header-actions'>
            <button class='header-btn' title='Share'>
              <i class='fas fa-arrow-up-from-bracket'/>
            </button>
            <button class='header-btn' title='More'>
              <i class='fas fa-ellipsis'/>
            </button>
          </div>
        </header>

        <div id='main-chat-area'>
          <div class='chat-container'>
            <b:section id='main' showaddelement='yes'>
              <b:widget id='Blog1' locked='true' title='Blog' type='Blog' version='2' visible='true'>
                <b:widget-settings>
                  <b:widget-setting name='showDateHeader'>false</b:widget-setting>
                  <b:widget-setting name='showShareButtons'>false</b:widget-setting>
                  <b:widget-setting name='showCommentLink'>false</b:widget-setting>
                  <b:widget-setting name='showAuthor'>false</b:widget-setting>
                  <b:widget-setting name='showAuthorProfile'>false</b:widget-setting>
                  <b:widget-setting name='showLabels'>false</b:widget-setting>
                  <b:widget-setting name='showLocation'>false</b:widget-setting>
                  <b:widget-setting name='showTimestamp'>false</b:widget-setting>
                  <b:widget-setting name='showReactions'>false</b:widget-setting>
                  <b:widget-setting name='showBacklinks'>false</b:widget-setting>
                  <b:widget-setting name='showInlineAds'>false</b:widget-setting>
                </b:widget-settings>
                
                <b:includable id='main'>
                  <b:if cond='data:posts.notEmpty'>
                    <b:loop values='data:posts' var='post'>
                      <article class='post-outer'>
                        <div class='message'>
                          <div class='message-avatar ai-avatar'>
                            <div class='mini-atom'>
                              <div class='mini-nucleus'/>
                              <div class='mini-orbit'/>
                            </div>
                          </div>
                          <div class='message-content'>
                            <div class='message-header'>
                              <span class='message-author'>Santrilogy AI</span>
                              <span class='message-time'>Just now</span>
                            </div>
                            <div class='post-body'>
                              <data:post.body/>
                            </div>
                            <div class='message-actions'>
                              <span class='msg-action' title='Copy'><i class='fas fa-copy'/></span>
                              <span class='msg-action' title='Regenerate'><i class='fas fa-rotate'/></span>
                              <span class='msg-action' title='Good'><i class='fas fa-thumbs-up'/></span>
                              <span class='msg-action' title='Bad'><i class='fas fa-thumbs-down'/></span>
                              <span class='msg-action' title='Share'><i class='fas fa-share'/></span>
                            </div>
                          </div>
                        </div>
                      </article>
                    </b:loop>
                  <b:else/>
                    <!-- Welcome -->
                    <div class='welcome-screen'>
                      <div class='welcome-logo'>
                        <div class='welcome-glow'/>
                        <div class='atom-logo atom-logo-lg'>
                          <div class='atom-nucleus'/>
                          <div class='atom-orbit atom-orbit-1'/>
                          <div class='atom-orbit atom-orbit-2'/>
                          <div class='atom-orbit atom-orbit-3'/>
                        </div>
                      </div>
                      <h1 class='welcome-title'>Santrilogy AI</h1>
                      <p class='welcome-subtitle'>
                        Asisten pintar untuk kajian Islam, fikih, dan kitab kuning.
                      </p>
                      <div class='suggestions'>
                        <div class='suggestion-card' onclick='askQuestion("Jelaskan hukum shalat jamak qasar")'>
                          <div class='suggestion-icon'><i class='fas fa-mosque'/></div>
                          <div class='suggestion-title'>Hukum Shalat</div>
                          <div class='suggestion-desc'>Pelajari fikih shalat jamak, qasar, dan jenazah</div>
                        </div>
                        <div class='suggestion-card' onclick='askQuestion("Apa saja rukun wudhu?")'>
                          <div class='suggestion-icon'><i class='fas fa-droplet'/></div>
                          <div class='suggestion-title'>Thaharah</div>
                          <div class='suggestion-desc'>Wudhu, tayamum, dan bersuci dari hadats</div>
                        </div>
                        <div class='suggestion-card' onclick='askQuestion("Terjemahkan bait alfiyah ibnu malik")'>
                          <div class='suggestion-icon'><i class='fas fa-book-quran'/></div>
                          <div class='suggestion-title'>Kitab Kuning</div>
                          <div class='suggestion-desc'>Terjemah dan syarah kitab klasik</div>
                        </div>
                        <div class='suggestion-card' onclick='askQuestion("Jelaskan rukun iman dan artinya")'>
                          <div class='suggestion-icon'><i class='fas fa-heart'/></div>
                          <div class='suggestion-title'>Akidah</div>
                          <div class='suggestion-desc'>Dasar-dasar keimanan Ahlussunnah</div>
                        </div>
                      </div>
                    </div>
                  </b:if>
                </b:includable>

                <b:includable id='aboutPostAuthor'/>
                <b:includable id='addComments'/>
                <b:includable id='blogThisShare'/>
                <b:includable id='bylineByName' var='byline'/>
                <b:includable id='bylineRegion' var='regionItems'/>
                <b:includable id='commentAuthorAvatar'/>
                <b:includable id='commentDeleteIcon' var='comment'/>
                <b:includable id='commentForm' var='post'/>
                <b:includable id='commentFormIframeSrc' var='post'/>
                <b:includable id='commentItem' var='comment'/>
                <b:includable id='commentList' var='comments'/>
                <b:includable id='commentPicker' var='post'/>
                <b:includable id='comments' var='post'/>
                <b:includable id='commentsLink'/>
                <b:includable id='commentsLinkIframe'/>
                <b:includable id='commentsTitle'/>
                <b:includable id='defaultAdUnit'/>
                <b:includable id='emailPostIcon'/>
                <b:includable id='facebookShare'/>
                <b:includable id='feedLinks'/>
                <b:includable id='feedLinksBody' var='links'/>
                <b:includable id='footerBylines'/>
                <b:includable id='googlePlusShare'/>
                <b:includable id='headerByline'/>
                <b:includable id='homePageLink'/>
                <b:includable id='iframeComments' var='post'/>
                <b:includable id='inlineAd' var='post'/>
                <b:includable id='linkShare'/>
                <b:includable id='nextPageLink'/>
                <b:includable id='otherSharingButton'/>
                <b:includable id='platformShare'/>
                <b:includable id='post' var='post'/>
                <b:includable id='postAuthor'/>
                <b:includable id='postBody' var='post'/>
                <b:includable id='postBodySnippet' var='post'/>
                <b:includable id='postCommentsAndAd' var='post'/>
                <b:includable id='postCommentsLink'/>
                <b:includable id='postFooter' var='post'/>
                <b:includable id='postFooterAuthorProfile' var='post'/>
                <b:includable id='postHeader' var='post'/>
                <b:includable id='postJumpLink' var='post'/>
                <b:includable id='postLabels'/>
                <b:includable id='postLocation'/>
                <b:includable id='postMeta' var='post'/>
                <b:includable id='postMetadataJSONImage'/>
                <b:includable id='postMetadataJSONPublisher'/>
                <b:includable id='postPagination'/>
                <b:includable id='postReactions'/>
                <b:includable id='postShareButtons'/>
                <b:includable id='postTimestamp'/>
                <b:includable id='postTitle' var='post'/>
                <b:includable id='previousPageLink'/>
                <b:includable id='sharingButton'/>
                <b:includable id='sharingButtonContent'/>
                <b:includable id='sharingButtons'/>
                <b:includable id='sharingButtonsMenu'/>
                <b:includable id='sharingPlatformIcon'/>
                <b:includable id='threadedCommentForm' var='post'/>
                <b:includable id='threadedCommentJs' var='post'/>
                <b:includable id='threadedComments' var='post'/>
                <b:includable id='tooltipCss'/>
              </b:widget>
            </b:section>
          </div>
        </div>

        <!-- Input -->
        <div class='input-wrapper'>
          <div class='input-container'>
            <div class='input-box'>
              <textarea 
                class='input-field' 
                id='userPrompt' 
                placeholder='Tanyakan tentang fikih, akidah, atau kitab kuning...' 
                rows='1'
              />
              <div class='input-actions'>
                <button class='input-btn' title='Attach'>
                  <i class='fas fa-paperclip'/>
                </button>
                <button class='input-btn' title='Voice'>
                  <i class='fas fa-microphone'/>
                </button>
                <button class='input-btn send-btn' id='sendBtn' title='Send'>
                  <i class='fas fa-arrow-up'/>
                </button>
              </div>
            </div>
            <p class='input-footer'>
              Santrilogy AI bisa keliru. Verifikasi ke ustadz atau kitab asli.
            </p>
          </div>
        </div>

      </main>
    </div>

    <script>
    //<![CDATA[
      // Theme
      function toggleTheme() {
        const current = document.body.getAttribute('data-theme');
        const next = current === 'dark' ? 'light' : 'dark';
        document.body.setAttribute('data-theme', next);
        localStorage.setItem('theme', next);
      }

      // Load theme
      (function() {
        const saved = localStorage.getItem('theme');
        if (saved) document.body.setAttribute('data-theme', saved);
      })();

      // Sidebar
      function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('open');
        document.getElementById('overlay').classList.toggle('active');
      }

      // Textarea auto-resize
      const ta = document.getElementById('userPrompt');
      if (ta) {
        ta.addEventListener('input', function() {
          this.style.height = 'auto';
          this.style.height = Math.min(this.scrollHeight, 140) + 'px';
        });
      }

      // Navigation
      function navigateTo(page) { console.log('Navigate:', page); }
      function startNewChat() { location.reload(); }
      function askQuestion(q) {
        const input = document.getElementById('userPrompt');
        if (input) {
          input.value = q;
          input.focus();
        }
      }
    //]]>
    </script>
  </body>
</html>